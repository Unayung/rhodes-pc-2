<div class="span10">

  <h3>Event List - <%= @month %> / <%= @year %></h3>
  <div class="btn-group">
    <%= link_to("Prev", admin_events_path(:month => @month.to_i-1), :class => "btn btn-info") %>
    <%= link_to("Next", admin_events_path(:month => @month.to_i+1), :class => "btn btn-info") %>
  </div>
  <%= link_to("Add Event", new_admin_event_path, :class => "btn btn-info pull-right") %>
  <br><br>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="200px">Title</th>
        <th width="120px">File</th>
      </tr>
    </thead>
    <% @events.each do |event| %>
    <tr>
      <td><%= link_to(event.title, event_path(event), :target => "_blank" ) %></td>
      <td>
        <%= link_to("Edit", edit_admin_event_path(event), :class => "btn btn-warning btn-small") %>
        <%= link_to("Delete", admin_event_path(event), :method => :delete, :confirm => "Are You Sure you want to delete ?", :class => "btn btn-danger btn-small") %>
      </td>
    </tr>
    <% end %>
  </table>
</div>