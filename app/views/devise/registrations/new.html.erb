<div id="register-page" class="span6 offset1 basic-form-page">
  <br>
  <br>
  <div class="box form-container register">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "simple_form form-horizontal form-register"}) do |f| %>
      
      <% if resource.errors.any? %>
      <p class="alert alert-danger"><i class="icon-warning-sign"></i> 請再次檢查您輸入的資訊，以完成註冊：</p>
      <% end -%>
      
      <div class="control-group">
        <%= f.label :name, "Name", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name, :required => true, :autofocus => true %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :email, "E-mail", :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :required => true %>
          <span class="help-block">Will be use as login account</span>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :password, "Password", :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password, :required => true %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :password_confirmation, "Password again", :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation, :required => true %>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <%= button_tag("Save", :class => "btn btn-primary btn-submit") %>
        </div>
      </div>
    <% end %>
  </div>
</div>