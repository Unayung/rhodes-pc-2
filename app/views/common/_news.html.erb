<div class="row">
  <div class="span12">
    <h3>Legal News and Updates <span> - <%= @display_date %></span></h3>
  </div>
  <div class="span12">
    <ul>
      <% @news.each do |news| %>
      <li><%= link_to(news.title, news_path(news), :target => :blank) %></li>
      <% end %>
    </ul>
  </div>
  <div class="span12">
    <div class="btn-group pull-right">
      <%# if @news_has_previous %>
        <%# link_to("Previous", root_path(:month => @previous_month), :class => "btn btn-info") %>
      <%# end %>
      <%# if @news_has_next %>
        <%# link_to("Next", root_path(:month => @next_month), :class => "btn btn-info") %>
      <%# end %>
    </div>
  </div>
</div>